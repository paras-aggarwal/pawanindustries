<html>
<head>
    <% include ../partials/header %>
    <% include ../partials/meta %>
    <title>Admin Panel | Pawan Industries | Total Weighing and Industrial Solutions</title>
    <script src="/js/data.min.js"></script>
</head>
<body>
    <div class="row no-gutters">
        <div class="col-md-12">
            <% include ../partials/admin-nav %>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <% include ../partials/admin-menu %>
            </div>
            <div class="col-lg-9">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active"><a href="/admin">Admin Home</a></li>
                        <li class="breadcrumb-item active"><a href="/admin/sent">View Sent Mails</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Compose Mail</li>
                    </ol>
                </nav>
                <br/>
                <div class="card">
                    <div class="card-header">
                        Send New Email
                    </div>
                    <div class="card-body">
                        <div id="mail-response-success">
                            <div class="alert alert-info alert-dismissible fade show" role="alert">
                                <p>Email Sent!</p>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                        <form method="post" action="/admin/sent/sendMail">

                            <div class="form-group row">
                                <label for="formGroupExampleInput" class="col-md-2 col-form-label">To:</label>
                                <div class="col-md">
                                    <input type="text" name="recipient" class="form-control" id="recipient" placeholder="e.g. stevejobs@apple.com" required>
                               </div>
                            </div>

                            <div class="form-group row">
                                <label for="formGroupExampleInput" class="col-md-2 col-form-label">CC:</label>
                                <div class="col-md">
                                    <input type="text" name="cc" class="form-control" id="cc" placeholder="e.g. stevejobs@apple.com">
                               </div>
                            </div>

                            <div class="form-group row">
                                <label for="formGroupExampleInput" class="col-md-2 col-form-label">BCC:</label>
                                <div class="col-md">
                                    <input type="text" name="bcc" class="form-control" id="bcc" placeholder="e.g. stevejobs@apple.com">
                               </div>
                            </div>

                            <div class="form-group row">
                                <label for="formGroupExampleInput2" class="col-md-2 col-form-label">Subject:</label>
                                <div class="col-md">
                                    <input type="text" name="subject" class="form-control" id="subject" placeholder="e.g. Eater Boston">
                               </div>
                            </div>

                            <div class="form-group row">
                                <label for="formGroupExampleInput" class="col-md-2 col-form-label">Message:</label>
                                <div class="col-md">
                                    <!-- <input type="file" name="attach"> -->
                                </div>
                            </div>
                            <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
                            <div id="message"></div>
                            <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>

                            <script>
                                let AlignStyle = Quill.import('attributors/style/align')
                                let BackgroundStyle = Quill.import('attributors/style/background')
                                let ColorStyle = Quill.import('attributors/style/color')

                                Quill.register(AlignStyle, true);
                                Quill.register(BackgroundStyle, true);
                                Quill.register(ColorStyle, true);

                                var quill = new Quill('#message', {
                                    modules: {
                                        toolbar: [
                                            [{header: [1, 2, 3, 4, 5, false]}],
                                            ['bold', 'italic', 'underline', 'strike'],
                                            ['blockquote', 'link', 'image'],
                                            [{'list': 'ordered'}, {'list': 'bullet'}],
                                            [{'script': 'sub'}, {'script': 'super'}],
                                            [{'size': ['small', false, 'large', 'huge'] }],
                                            [{'color': []}, {'background': []}],
                                            [{'align': []}]
                                        ]
                                    },
                                    placeholder: 'Write your message',
                                    theme: 'snow'
                                })
                            </script>

                        </form>
                        <input type="submit" class="btn btn-primary" id="sendMailBtn" value="Send" onclick="sendMail()">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br> <br>
    <% include ../partials/footer %>
</body>
</html>