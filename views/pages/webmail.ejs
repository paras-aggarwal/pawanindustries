<html>
<head>
    <script src="//cdn.ckeditor.com/4.4.7/full/ckeditor.js"></script>
    <% include ../partials/header %>
    <% include ../partials/meta %>
    <title>Webmail | Pawan Industries | Total Weighing and Industrial Solutions</title>
</head>
<body>
    <div class="row no-gutters">
        <div class="col-md-12">
            <% include ../partials/admin-nav %>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <% include ../partials/admin-menu %>
            </div>
            <div class="col-lg-9">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin">Admin Home</a></li>
                        <li class="breadcrumb-item"><a href="/admin/email">Send Email</a></li>
                    </ol>
                </nav>
                <br/>
                <div class="card">
                    <div class="card-header">
                        Send New Email
                    </div>
                    <div class="card-body">
                        <% if (!response) { %>
                        <% } else { %>
                            <div class="alert alert-info alert-dismissible fade show" role="alert">
                                <p><%= response %></p>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        <% } %>
                        <form method="post" action="/admin/sendMail">

                            <div class="form-group row">
                                <label for="formGroupExampleInput" class="col-md-2 col-form-label">To:</label>
                                <div class="col-md">
                                    <input type="text" name="recipient" class="form-control" id="formGroupExampleInput"
                                   placeholder="e.g. stevejobs@apple.com" required>
                               </div>
                            </div>

                            <div class="form-group row">
                                <label for="formGroupExampleInput" class="col-md-2 col-form-label">CC:</label>
                                <div class="col-md">
                                    <input type="text" name="cc" class="form-control" id="formGroupExampleInput"
                                   placeholder="e.g. stevejobs@apple.com">
                               </div>
                            </div>

                            <div class="form-group row">
                                <label for="formGroupExampleInput" class="col-md-2 col-form-label">BCC:</label>
                                <div class="col-md">
                                    <input type="text" name="BCC" class="form-control" id="formGroupExampleInput"
                                   placeholder="e.g. stevejobs@apple.com">
                               </div>
                            </div>

                            <div class="form-group row">
                                <label for="formGroupExampleInput2" class="col-md-2 col-form-label">Subject:</label>
                                <div class="col-md">
                                    <input type="text" name="subject" class="form-control" id="formGroupExampleInput2"
                                   placeholder="e.g. Eater Boston">
                               </div>
                            </div>

                            <div class="form-group row">
                                <label for="formGroupExampleInput" class="col-md-2 col-form-label">Message:</label>
                                <div class="col-md">
                                    <input type="file" name="attach" class="form-control-file" id="exampleFormControlFile1">
                                </div>
                                <textarea class="form-control" name="message" id="message" required></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary"> Send <i class="fab fa-telegram-plane"></i> </button>
                        </form>
                        <script>
                            CKEDITOR.replace('message');
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br> <br>
    <% include ../partials/footer %>
</body>
</html>